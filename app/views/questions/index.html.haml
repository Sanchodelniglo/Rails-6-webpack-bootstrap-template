.container
  - @questions.each_with_index do |question, index|
    .question-card.d-none{data: {index: index}}
      .row
        .col-12.prompt
          .text-center= question.prompt
      %hr
      .row.g-2
        - question.answers.each do |answer|
          .col-md-6.answers.btn.btn-primary{data: {answer_id: answer.id}}
            .white-font
              = answer.assertion
          %br

= javascript_pack_tag :game